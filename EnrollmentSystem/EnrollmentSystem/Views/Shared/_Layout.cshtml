@inject IHttpContextAccessor HttpContextAccessor;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - N.a.R.U.</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EnrollmentSystem.styles.css" asp-append-version="true" />
    <link href="~/datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("~/images/unilogo.png")" />
</head>
<body>
    @if (IsSectionDefined("LoginForm"))
    {
        @RenderSection("LoginForm", required: false)
    }
    else{
        <div class="wrapper">

            <aside class="sideMenu" id="sidebar">
                <div class="sidebar-content">
                    <h6 style="padding-top:35px; padding-left:15px; color:#08979c!important">MENU</h6>
                    <partial name="/Views/Shared/Menu.cshtml" />
                </div>
            </aside>

            <div id="side-content">

                <div class="app-bar topBar" data-role="appbar">
                    <div class="container-fluid">
                        <! -- Wrap content in a container for the grid system -->
                        <div class="row">
                            <div class="col-auto">
                                <! -- Content that should always stay on the left -->
                                <button class="app-bar-item pointer" id="sidebarCollapse">
                                    <span><i class="bi bi-layout-sidebar-inset"></i></span>
                                </button>
                                <a class="navbar-brand fg-black" asp-controller="Home" asp-action="Index">
                                    <img src="~/images/unilogo.png" alt="splash" class="logo" style="height:55px; width:55px;">
                                    <span class="app-name" style="margin-left:5px;"><strong>N.a.R.U.</strong></span>
                                </a>
                            </div>
                            <div class="col d-flex justify-content-end">
                                <! -- Column for the logout button -->
                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <ul class="navbar-nav">
                                        @if (HttpContextAccessor.HttpContext.Session.GetString("IsLoggedIn") == "true")
                                        {
                                             <li class="nav-item dropdown"> 
                                                 <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="bi bi-person-circle"></i>
                                                 </a>
                                                 <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown"> 
                                                     <a class="dropdown-item" asp-action="Logout" asp-controller="Home"> 
                                                         <i class="fas fa-power-off"></i> Logout
                                                     </a>
                                                 </div>
                                             </li>
                                         }
                                         else
                                         { 
                                             <li class="nav-item"> 
                                                 <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a> 
                                             </li> 
                                         }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> <! -- End container -->
                </div>

                <div class="container pb-5">
                    <div class="body-content">
                        @RenderBody()
                    </div>
                </div>

                <div class="overlay"></div>
            </div>
        </div>
        @* <footer class="border-top footer text-muted bg-white position-fixed bottom-0">
            <div class="container text-center">
                &copy; 2024 - EnrollmentSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer> *@
    }
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script> <! -- Required for Bootstrap's JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
