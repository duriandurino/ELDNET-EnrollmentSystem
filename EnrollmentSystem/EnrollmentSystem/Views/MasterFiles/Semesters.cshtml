@model EnrollmentSystem.Models.Entities.Semester

<h1>Semester</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Semester Detail</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SaveSemester" asp-controller="MasterFiles" method="post" id="semesterForm">
                        <div class="form-group">
                            <input asp-for="sem_id" type="hidden" class="form-control" readonly id="sem_id" value="@(Model != null ? Model.sem_id : "")" />
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="sem_year" class="form-label">Semester (e.g. 1st, 2nd) *</label>
                            <input asp-for="sem_year" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="sem_start" class="form-label">Semester Start *</label>
                            <input asp-for="sem_start" type="date" class="form-control" /> <! -- Use type="date" for date input -->
                        </div>

                        <div class="form-group">
                            <label asp-for="sem_end" class="form-label">Semester End *</label>
                            <input asp-for="sem_end" type="date" class="form-control" />
                        </div>
                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-secondary" id="createNewBtn">CREATE NEW</button>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> SAVE</button>
                        </div>
                    </form>
                    <script>
                        document.getElementById("createNewBtn").addEventListener("click", function () {
                            document.getElementById("semesterForm").reset(); 
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Semester List</h4>
                </div>
                <div class="card-body overflow-scroll">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="searchInput" class="form-label">Search:</label>
                                <input type="text" class="form-control" id="searchInput">
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Semester ID</th>
                                <th>Semester Year</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Semesters != null)
                            {
                                @foreach (var semester in ViewBag.Semesters)
                                {
                                    <tr>
                                        <td>@semester.sem_id</td>
                                        <td>@semester.sem_year</td>
                                        <td>@semester.sem_start.ToString("yyyy-MM-dd")</td> <! -- Format date as needed -->
                                        <td>@semester.sem_end.ToString("yyyy-MM-dd")</td> <! -- Format date as needed -->
                                        <! -- Cells for other Semester properties -->
                                        <td>
                                            <a asp-action="Semesters" asp-controller="MasterFiles" asp-route-id="@semester.sem_id" asp-route-page="@ViewBag.CurrentPage" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pen-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteSemester" asp-controller="MasterFiles" asp-route-id="@semester.sem_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this semester?')">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Showing @((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1) - (ViewBag.PageSize != null ? ViewBag.PageSize : 1) + 1)
                                to @Math.Min((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1), (int)(ViewBag.SemesterCount != null ? ViewBag.SemesterCount : 0))
                                of @(ViewBag.SemesterCount != null ? ViewBag.SemesterCount : 0) entries
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Semesters" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Semesters" asp-controller="MasterFiles" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Semesters" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>