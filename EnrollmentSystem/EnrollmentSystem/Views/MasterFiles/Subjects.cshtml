@model EnrollmentSystem.Models.Entities.Subject

<h1>Subject</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Subject Detail</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SaveSubject" asp-controller="MasterFiles" method="post" id="form">
                        <div class="form-group">
                            <input asp-for="subj_id" type="hidden" class="form-control" readonly id="subj_id" value="@(Model != null ? Model.subj_id : "")" />
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="subj_code" class="form-label">Subject Code *</label>
                            <input asp-for="subj_code" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="course_id" class="form-label">Course</label>
                            <select asp-for="course_id" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Departments, "course_id", "course_id"))">
                                <option value="">-- Select Course --</option>
                            </select>
                        </div>

                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-secondary" id="createNewBtn">CREATE NEW</button>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> SAVE</button>
                        </div>
                    </form>
                    <script>
                        document.getElementById("createNewBtn").addEventListener("click", function () {
                            document.getElementById("upform").reset();
                        });
                    </script>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Subject List</h4>
                </div>
                <div class="card-body overflow-scroll">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="searchInput" class="form-label">Search:</label>
                                <input type="text" class="form-control" id="searchInput">
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Subject ID</th>
                                <th>Subject Code</th>
                                <th>Subject Start Time</th>
                                <th>Subject End Time</th>
                                <th>Subject Days</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(ViewBag.Subjects!=null){
                                @foreach (var subject in ViewBag.Subjects)
                                {
                                    <tr>
                                        <td>@subject.subj_id</td>
                                        <td>@subject.subj_code</td>
                                        <td>@subject.subj_starttime.ToString("hh:mm tt")</td>
                                        <td>@subject.subj_endtime.ToString("hh:mm tt")</td>
                                        <td>@subject.subj_days</td>
                                        <td>
                                            <a asp-action="Subjects" asp-controller="MasterFiles" asp-route-id="@subject.subj_id" asp-route-page="@ViewBag.CurrentPage" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pen-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteSubject" asp-route-id="@subject.subj_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this subject?')">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Showing @((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1) - (ViewBag.PageSize != null ? ViewBag.PageSize : 1) + 1)
                                to @Math.Min((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1), (int)(ViewBag.SubjectCount != null ? ViewBag.SubjectCount : 0))
                                of @(ViewBag.SubjectCount != null ? ViewBag.SubjectCount : 0) entries
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Subjects" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Subjects" asp-controller="MasterFiles" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Subjects" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>