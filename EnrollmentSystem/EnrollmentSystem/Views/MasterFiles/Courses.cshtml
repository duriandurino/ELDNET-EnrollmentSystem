@model EnrollmentSystem.Models.Entities.Course

<h1>Course</h1>

<div class="container mt-4">
    <div class="row">

        <!-- Course Detail Section -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Course Detail</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SaveCourse" asp-controller="MasterFiles" method="post" id="upform">
                        <div class="form-group">
                            <input asp-for="course_id" type="hidden" class="form-control" readonly id="course_id" value="@(Model != null ? Model.course_id : "")" />
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="course_code" class="form-label">Course Code *</label>
                            <input asp-for="course_code" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="course_title" class="form-label">Course Title *</label>
                            <input asp-for="course_title" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="course_desc" class="form-label">Course Description *</label>
                            <textarea asp-for="course_desc" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="dept_id" class="form-label">Department *</label>
                            <select asp-for="dept_id" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Departments, "dept_id", "dept_name"))"> 
                                <option value="">-- Select Department --</option>
                            </select> 
                        </div>

                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-secondary" id="createNewBtn">CREATE NEW</button>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> SAVE</button>
                        </div>
                    </form>

                    <script>
                        document.getElementById("createNewBtn").addEventListener("click", function () {
                            document.getElementById("upform").reset();
                        });
                    </script>
                </div>
            </div>
        </div>

        <! -- Course List Section -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Course List</h4>
                </div>
                <div class="card-body overflow-scroll">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="searchInput" class="form-label">Search:</label>
                                <input type="text" class="form-control" id="searchInput">
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Course ID</th>
                                <th>Course Code</th>
                                <th>Course Title</th>
                                <th>Description</th>
                                @* <th>Department</th> *@
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Courses != null)
                            {
                                @foreach (var course in ViewBag.Courses)
                                {
                                    <tr>
                                        <td>@course.course_id</td>
                                        <td>@course.course_code</td>
                                        <td>@course.course_title</td>
                                        <td>@course.course_desc</td>
                                        @* <td>@(ViewBag.Departments.FirstOrDefault(d => d.dept_id == int.Parse(course.dept_id.ToString() ?? "0"))?.dept_name ?? "")</td> *@
                                        <td>
                                            <a asp-action="Courses" asp-controller="MasterFiles" asp-route-id="@course.course_id" asp-route-page="@ViewBag.CurrentPage" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pen-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteCourse" asp-controller="MasterFiles" asp-route-id="@course.course_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?')">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Showing @((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1) - (ViewBag.PageSize != null ? ViewBag.PageSize : 1) + 1)
                                to @Math.Min((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1), (int)(ViewBag.CourseCount != null ? ViewBag.CourseCount : 0))
                                of @(ViewBag.CourseCount != null ? ViewBag.CourseCount : 0) entries
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Courses" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Courses" asp-controller="MasterFiles" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Courses" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>