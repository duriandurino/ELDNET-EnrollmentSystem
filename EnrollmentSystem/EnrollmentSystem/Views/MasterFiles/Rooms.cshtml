@model EnrollmentSystem.Models.Entities.Room

<h1>Room</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Room Detail</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SaveRoom" asp-controller="MasterFiles" method="post" id="roomForm">
                        <div class="form-group">
                            <input asp-for="room_id" type="hidden" class="form-control" readonly id="room_id" value="@(Model != null ? Model.room_id : "")" />
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="room_code" class="form-label">Room Code *</label>
                            <input asp-for="room_code" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="room_type" class="form-label">Room Type *</label>
                            <input asp-for="room_type" class="form-control" />
                        </div>

                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-secondary" id="createNewBtn">CREATE NEW</button>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> SAVE</button>
                        </div>
                    </form>
                    <script>
                        document.getElementById("createNewBtn").addEventListener("click", function () {
                            document.getElementById("roomForm").reset();
                        });
                    </script>
                </div>
            </div>
        </div>
        <! -- Room List Section -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Room List</h4>
                </div>
                <div class="card-body overflow-scroll">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="searchInput" class="form-label">Search:</label>
                                <input type="text" class="form-control" id="searchInput">
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Room ID</th>
                                <th>Room Code</th>
                                <th>Room Type</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Rooms!=null)
                            {
                                @foreach (var room in ViewBag.Rooms)
                                {
                                    <tr>
                                        <td>@room.room_id</td>
                                        <td>@room.room_code</td>
                                        <td>@room.room_type</td>
                                        <td>
                                            <a asp-action="Rooms" asp-controller="MasterFiles" asp-route-id="@room.room_id" asp-route-page="@ViewBag.CurrentPage" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pen-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteRoom" asp-controller="MasterFiles" asp-route-id="@room.room_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this room?')">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Showing @((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1) - (ViewBag.PageSize != null ? ViewBag.PageSize : 1) + 1)
                                to @Math.Min((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1), (int)(ViewBag.RoomCount != null ? ViewBag.RoomCount : 0))
                                of @(ViewBag.RoomCount != null ? ViewBag.RoomCount : 0) entries
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Rooms" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Rooms" asp-controller="MasterFiles" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Rooms" asp-controller="MasterFiles" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>