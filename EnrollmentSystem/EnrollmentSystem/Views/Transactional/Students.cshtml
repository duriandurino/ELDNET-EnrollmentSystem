@model EnrollmentSystem.Models.Entities.Student
<h1>Students</h1>

<div class="container mt-4">
    <div class="row">
        <!-- Student Details -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Student Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SaveStudent" asp-controller="Transactional" method="post" id="studentForm">
                        <input asp-for="stud_id" class="form-control" readonly id="stud_id" value="@(Model != null ? Model.stud_id : "")" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="stud_fname" class="form-label">First Name *</label>
                            <input asp-for="stud_fname" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_lname" class="form-label">Last Name *</label>
                            <input asp-for="stud_lname" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_mname" class="form-label">Middle Name</label>
                            <input asp-for="stud_mname" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_email" class="form-label">Email</label>
                            <input asp-for="stud_email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_address" class="form-label">Address *</label>
                            <input asp-for="stud_address" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_phone" class="form-label">Phone</label>
                            <input asp-for="stud_phone" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="stud_section" class="form-label">Section *</label>
                            <input asp-for="stud_section" class="form-control" />
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-secondary" id="createNewBtn">CREATE NEW</button>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> SAVE</button>
                        </div>
                    </form>
                    <script>
                        document.getElementById("createNewBtn").addEventListener("click", function () {
                            document.getElementById("studentForm").reset();

                        });
                    </script>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card mt-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Student List</h4>
                </div>
                <div class="card-body overflow-scroll">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="searchInput" class="form-label">Search:</label>
                                <input type="text" class="form-control" id="searchInput">
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Middle Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Section</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in ViewBag.Students)
                            {
                                <tr>
                                    <td>@student.stud_id</td>
                                    <td>@student.stud_fname</td>
                                    <td>@student.stud_lname</td>
                                    <td>@student.stud_mname</td>
                                    <td>@student.stud_email</td>
                                    <td>@student.stud_address</td>
                                    <td>@student.stud_phone</td>
                                    <td>@student.stud_section</td>
                                    <td>
                                        <a asp-action="Students" asp-controller="Transactional" asp-route-id="@student.stud_id" asp-route-page="@ViewBag.CurrentPage" class="btn btn-primary btn-sm">
                                            <! -- Call "Students" to prepopulate -->
                                            <i class="bi bi-pen-fill"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteStudent" asp-controller="Transactional" asp-route-id="@student.stud_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?')">
                                            <i class="bi bi-trash3-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Showing @((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1) - (ViewBag.PageSize != null ? ViewBag.PageSize : 1) + 1)
                                to @Math.Min((ViewBag.CurrentPage != null ? ViewBag.CurrentPage : 1) * (ViewBag.PageSize != null ? ViewBag.PageSize : 1), (int)(ViewBag.StudentCount != null ? ViewBag.StudentCount : 0))
                                of @(ViewBag.StudentCount != null ? ViewBag.StudentCount : 0) entries
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Students" asp-controller="Transactional" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Students" asp-controller="Transactional" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Students" asp-controller="Transactional" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>